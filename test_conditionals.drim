wake("--- STARTING ELSE IF TEST ---")

i = 10
j = 20

// Test 1: Standard IF
if i == 10 {
    wake("1. Simple IF passed")
}

// Test 2: IF - ELSE
if i > 50 {
    wake("2. Failed")
